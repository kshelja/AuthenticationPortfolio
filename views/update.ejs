<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <%- include partials/headlinks %>
</head>

<body>

  <!-- Partial header included below -->
  <%- include partials/header %>



    <section style="background-color: #e9ecefb3;">

      <div class="fullheight pb-5">


        <div class="container">
          <div class="row align-items-stretch justify-content-center no-gutters">
            <div class="col-md-7">
              <div class="form h-100 contact-wrap p-5">
                <h3 class="mb-5">Update Data</h3>
                <form class="mb-5 bg-white p-3" id="" name="contactForm" action="/updatedata" method="get">
                  <div class="row">
                    <div class="col-md-12 form-group mb-3">
                      <label for="" class="col-form-label">Name</label>
                      <input type="text" value="<%= content.name%>" class="form-control" name="name" id="firstname" placeholder="<%= content.name%>">
                    </div>
                    <div class="col-md-12 form-group mb-3">
                      <label for="" class="col-form-label">Number </label>
                      <input type="text" value="<%= content.number%>" class="form-control" name="number" id="lastname" placeholder="<%= content.number%>">
                    </div>

                    <div class="col-md-12 form-group mb-3">
                        <label for="" class="col-form-label">Email </label>
                        <input type="text" value="<%= content.email%>" class="form-control" name="email" id="lastname" placeholder="<%= content.email%>">
                      </div>


                      <input type="hidden"  name="id" value="<%= content._id%>">

                  </div>


                  <div class="row justify-content-center">
                    <div class="col-md-5 form-group text-center">
                      <input type="submit" value="Update" class="btn btn-block btn-primary rounded-0 py-2 px-4">
                      <span class="submitting"></span>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>


    </section>









    <!-- Partial Footer included below -->
    <%- include partials/footer %>



</body>

</html>